<p style="color: green"><%= notice %></p>

<div class="col-lg-8">
  <div class="card shadow">
    <div class="card-body">
      <%= render @plant %>
    </div>
  </div>
  <div class="mt-4">
    <%= link_to "Edit this plant", edit_plant_path(@plant), class: "btn btn-danger" %> 
    <%= link_to "Back to plants", plants_path, class: "btn btn-outline-primary" %>

    <%= button_to "Destroy this plant", @plant, method: :delete, class: "btn btn-danger mt-2" %>
  </div>
</div>

